<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grants.MainPage">

    <StackLayout>
        <Label Text="Вы не зарегистрировались." BackgroundColor="Yellow" HorizontalOptions="Fill" HorizontalTextAlignment="Center"/>

        <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="8">
            <StackLayout>
                <BoxView Color="Gray"  HeightRequest="2" HorizontalOptions="Fill" />
                <BoxView Color="Gray"  HeightRequest="2" HorizontalOptions="Fill" />
                <Label Text="text should be replaced with parser" FontSize="Large" HorizontalOptions="Center"  />
            </StackLayout>
        </Frame>
        <ListView x:Name="GrantsList" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Konkurs}" FontSize="Medium" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
